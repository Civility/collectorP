                                    class=val.action
                                    id=val.id
                                    aria-controls="nav-"+val.id
                                    data-toggle="tab"
                                    role="tab"
                                ).nav-item.card-title.stretched-link
                                    h5=val.name
                                .card-text
                                    small.text-muted
