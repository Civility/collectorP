.address-form    
    .title-left адрес доставки
    form
        dl.form-group.row
            dt.col-sm-10
                input#City(type="text" placeholder="Город" required).form-control
                .valid-tooltip Ошибка
            dd.col-sm-2
                button(type="submit").btn.btn-link.small Изменить
